                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"email\": \"{{test_email}}\",\n    \"otp\": \"{{verification_otp}}\"\n}"
                        },
                        "url": {
                            "raw": "{{base_url}}/api/v1/auth/verify-email",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
